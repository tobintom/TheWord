<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/langappBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/lang_toolbar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/actionBarStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title="" />
            <TextView
                android:id="@+id/aboutBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_keyboard_backspace_24"
                android:textStyle="bold"
                android:text="  Back"
                android:textColor="?attr/titleTextColor"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/lang_toolbar1"
                app:layout_constraintStart_toStartOf="@+id/lang_toolbar1"
                app:layout_constraintTop_toTopOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollViewAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/langappBarLayout"
        app:layout_constraintStart_toStartOf="@+id/langappBarLayout"
        app:layout_constraintTop_toBottomOf="@+id/langappBarLayout"
        android:background="?attr/backgroundColor"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/bible"
                 />
            <TextView
                android:paddingBottom="10dp"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:textSize="17dp"
                android:text="The Digital Word"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="?attr/titleTextColor"
                android:textSize="17dp"
                android:text="Read the Word of God in over 60 languages, complete with cross references, Bible text personalization, search options and
lots of other features. This app is 100% free with no advertisements and requires no login."
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="?attr/titleTextColor"
                android:text="Freely Received, Freely Given."
                android:textSize="17dp"
                android:paddingBottom="50dp"/>

            <TextView
                android:id="@+id/back_footer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:gravity="fill_vertical"
                android:lineSpacingExtra="2dp"
                android:padding="2dp"
                android:paddingTop="15dp"
                android:paddingBottom="2dp"
                android:text="c"
                android:textColor="?attr/textAppearanceHeadline1"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/back_footer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:autoLink="web"
                android:fontFamily="sans-serif"
                android:gravity="fill_vertical"
                android:lineSpacingExtra="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="30dp"
                android:text="https://thedigitalword.org"
                android:textColor="?attr/textAppearanceHeadline1"
                android:textColorLink="?attr/textAppearanceHeadline2"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
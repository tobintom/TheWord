<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/neditbookref"
    android:orientation="vertical"
    android:background="?attr/cardBackgroundColor"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/nebview"
        android:text="Edit Bible Note"
        android:gravity="center_horizontal"
        android:drawableEnd="@drawable/ic_baseline_close_24"
        android:drawableTint="?attr/titleTextColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:textColor="?attr/textAppearanceHeadline4"
        android:textStyle="bold"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/nebversetext"
        android:text="John 3:1,2-3,5"
        android:layout_below="@id/nebview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="?attr/textAppearanceHeadline1"
        android:textStyle="bold"
        android:textSize="17sp"
        />
    <EditText
        android:id="@+id/nebTitle_E"
        android:layout_width="match_parent"
        android:textSize="17dp"
        android:textColor="?attr/textAppearanceHeadline4"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:ems="10"
        android:inputType="textCapSentences" />
    <EditText
        android:id="@+id/nebLink_E"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/ic_baseline_add_link_24"
        android:drawableTint="?attr/titleTextColor"
        android:drawablePadding="10dp"
        android:textSize="17dp"
        android:textColor="?attr/textAppearanceHeadline4"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:ems="10"
        android:inputType="textCapSentences" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:textSize="14dp"
        android:textColor="?attr/textAppearanceHeadline1"
        android:text="You can use the Link to tag this Note with other Notes tagged with the same Link."/>
    <EditText
        android:id="@+id/nebiblenote_E"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp"
        android:textColor="?attr/textAppearanceHeadline4"
        android:ems="10"
        android:gravity="top|left"
        android:inputType="textCapSentences|textMultiLine"  />
    <LinearLayout
        android:id="@+id/nebbutton_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/nebook_save"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Save" />
        <Button
            android:id="@+id/nebook_cancel"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel" />
    </LinearLayout>

</LinearLayout>
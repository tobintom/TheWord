<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/homelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:liftOnScroll="true"  >

        <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/home_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fafafa"
                app:layout_anchor="@+id/appBarLayout"
                app:layout_anchorGravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:title="" >
            <TextView
                android:id="@+id/toolbook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center_vertical"
                android:minHeight="40dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/toollang"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/toollang"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center_vertical"
                android:minHeight="40dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/home_toolbar"
                app:layout_constraintTop_toTopOf="parent" />
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="35dp"
        android:background="#f6f1f1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintEnd_toEndOf="@+id/appBarLayout"
        app:layout_constraintStart_toStartOf="@+id/appBarLayout"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="80dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                app:cardBackgroundColor="@color/white"
                app:cardPreventCornerOverlap="false"
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/outside_image"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:rotation="10"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="#b25b6e"
                        />
                    <ImageView
                        android:id="@+id/bookicon"
                        android:background="#f9cdd4"
                        android:src="@drawable/b01"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_margin="15dp"
                        android:contentDescription="" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/home_book"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="50dp"
                        android:layout_toEndOf="@id/bookicon"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="3dp"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text=""
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bookenglish"
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/home_book"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/bookicon"
                        android:drawablePadding="2dp"
                        android:textColor="@color/text"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/home_verse_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv"
                android:fontFamily="sans-serif"
                android:gravity="fill_vertical"
                android:lineSpacingExtra="5dp"
                android:padding="10dp"
                android:textColor="#5d4037"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/home_footer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_verse_text"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:gravity="fill_vertical"
                android:lineSpacingExtra="2dp"
                android:padding="2dp"
                android:paddingBottom="2dp"
                android:text=""
                android:textColor="#5d4037"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/home_footer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_footer1"
                android:layout_centerHorizontal="true"
                android:autoLink="web"
                android:fontFamily="sans-serif"
                android:gravity="fill_vertical"
                android:lineSpacingExtra="10dp"
                android:padding="10dp"
                android:paddingBottom="30dp"
                android:text="https://thedigitalword.org"
                android:textColor="#5d4037"
                android:textColorLink="#751a13"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <TextView
        android:id="@+id/bookBottom"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="16dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/bottom_rect"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabLeft"
        app:fabSize="mini"
        app:backgroundTint="#A9A9A9"
        android:backgroundTint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
        app:layout_behavior="com.theword.thedigitalword.component.ScrollAwareFABBehaviour" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRight"
        app:fabSize="mini"
        android:backgroundTint="@color/white"
        app:backgroundTint="#A9A9A9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
        app:layout_behavior="com.theword.thedigitalword.component.ScrollAwareFABBehaviour" />
    <include
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>